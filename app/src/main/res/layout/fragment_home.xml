<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="57dp"
              android:background="@color/colorPrimaryDark"
              android:baselineAligned="false"
              android:orientation="vertical"
              android:weightSum="1">

    <TextView
        android:id="@+id/homescreenText"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tourneys to mod this week"
        android:textColor="@color/colorText"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:layout_below="@id/modDaysRecycler"
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/homescreenText"
        android:id="@+id/modDaysRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/addToCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add tournaments to google calendar"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@color/colorAccent"
        android:padding="8dp"/>



</RelativeLayout>