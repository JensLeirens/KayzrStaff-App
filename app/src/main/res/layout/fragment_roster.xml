<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorPrimaryDark"
              android:baselineAligned="false"
              android:orientation="vertical"
              android:weightSum="1"
              android:layout_marginTop="57dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rosterRecycler"/>

    </ScrollView>

    <android.support.design.widget.TabLayout
        android:id="@+id/rosterTablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:elevation="1dp"
        app:tabTextColor="@color/colorText"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabIndicatorHeight="4dp">

        <android.support.design.widget.TabItem
            android:id="@+id/tabMaandag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tabdinsdag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Di"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tabwoensdag"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Wo"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tabdonderdag"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Do"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tabvrijdag"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Vr"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tabzaterdag"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Za"/>

        <android.support.design.widget.TabItem
            android:id="@+id/tabzondag"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Zo"/>

    </android.support.design.widget.TabLayout>

</LinearLayout>