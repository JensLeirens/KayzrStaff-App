<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="0.25dp"
        android:paddingTop="10dp"
        card_view:cardBackgroundColor="@color/colorCardBackground"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        card_view:contentPaddingBottom="5dp"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingRight="15dp"
        card_view:contentPaddingTop="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/avTourney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/avBeschikbaar"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:text="Tourney: "
                android:textSize="17sp"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/avCardHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/avBeschikbaar"
                android:layout_toRightOf="@id/avTourney"
                android:padding="5dp"
                android:text="19h30"
                android:textSize="15sp"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/avCardtournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/avBeschikbaar"
                android:layout_toLeftOf="@id/avBeschikbaar"
                android:padding="5dp"
                android:text="OW 4V4 TDM"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/avBeschikbaar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="?android:attr/listChoiceIndicatorMultiple"
                android:button="@null" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>